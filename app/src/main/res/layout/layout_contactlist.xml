<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="15dp"
    android:id="@+id/layout_contact"
    android:layout_marginTop="15dp"
  >


    <ImageView
        android:id="@+id/contact_imageview"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="15dp"
        android:src="@drawable/boys" />
    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="15dp"
        android:layout_toRightOf="@+id/contact_imageview"
        android:orientation="vertical"
        android:background="@drawable/contact_box">

        <TextView
            android:textColor="@color/colorWhite"
            android:id="@+id/contact_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="Nombre de usuario"
      />

        <TextView
            android:textColor="@color/colorWhite"
            android:id="@+id/contact_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="Email del usuario"
            />

        <TextView
            android:id="@+id/contact_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="Numero del usuario"
            android:textColor="@color/colorWhite" />

    </LinearLayout>



</RelativeLayout>